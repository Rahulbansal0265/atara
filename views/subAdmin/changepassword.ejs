<%-include("./partials/header")%>  

 
  
  <div class="page-container">
<style>
    .panel-body {
    position: relative;
    width: 330px;
    margin: 30px auto;
}
</style>
        <!-- Page content -->
        <div class="page-content">

            <!-- Main sidebar -->
            <%-include("./partials/sidebar")%>
                <!-- /main sidebar -->


                <!-- Main content -->
                <div class="content-wrapper">

                    <!-- Page header -->
                    <div class="page-header page-header-default">
                        <div class="page-header-content">
                            <div class="page-title">
                                <h4><a href="javascript:history.go(-1);"><i class="icon-arrow-left52 position-left"></i></a> <span
                                        class="text-semibold">Home</span> - Dashboard</h4>
                            </div>


                        </div>


                    </div>
                    <!-- /page header -->

                    <!-- Content area -->
                    <div class="content">


                       


                                            <form id="validationpassword" action="/updatepasswordSubadmin" method="post">
                                                <div class="panel panel-body login-form">
                                                    <div class="text-center">
                                                        <!-- <div class="icon-object border-warning text-warning"> -->
                                                            <!-- <i class="icon-spinner11"></i> -->
                                                            <!-- </div> -->
                                                        <h3 class="content-group">Change Password </h3>
                                                    </div>

                                                    <div class="form-group has-feedback">
                                                        <input type="password" name="oldpassword" class="form-control"
                                                            placeholder="Old Password" id="password">

                                                            

                                                    </div>
                                                    <div class="form-group has-feedback">
                                                        <input type="password" name="newpassword" class="form-control"
                                                            placeholder="New Password"  minlength="6">

                                                            

                                                    </div>
                                                    <div class="form-group has-feedback">
                                                        <input type="password" name="confirmpassword" class="form-control"
                                                            placeholder="Confirm Password">

                                                    </div>
                                                 

                                                    <div class="form-group">
                                                        <button
                                                            class="btn btn-primary btn-block">Change Password</button>

                                                    </div>
                                                </div>

                                            </form>





                        <!-- Footer -->
                        <%-include("./partials/footer")%>
                            <!-- /footer -->

                    </div>
                    <!-- /content area -->

                </div>
                <!-- /main content -->

        </div>
        <!-- /page content -->

    </div>
    <!-- /page container -->

    </body>

    </html>


    <script>
	
        $("#validationpassword").validate({
            rules: {
    
                oldpassword: {
                    required: true,
                 
                },
           
                newpassword: {
                    required: true,
               
                    
                },
                confirmpassword: {
                        required: true,
                        equalTo : '[name="newpassword"]'

                    },
              
    
                
            messages: {
                oldpassword: {
    
                    required: "Please enter old password.",
                 
                },
                newpassword: {
    
                        required: "Please enter new password.",
                    
                        },
                    

            
    
            }
            }
        });
    
    

        jQuery.extend(jQuery.validator.messages, {
            equalTo: "New password and confirm password doesn't match.",
        });
    </script>
