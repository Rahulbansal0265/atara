        function changeStatus(id, elem) {
            var status = 0;
            if (elem.checked) {
                status = 1
            }

            $.ajax({
                type: "post",
                url: "/admin/professionals/changeStatus",
                data: {
                    id: id,
                    status: status
                },
                beforeSend: function () {
                    blockUI("#professional_datatable");
                },
                success: function (data) {
                    unblockUI("#professional_datatable");
                    if (data) {

                        $(".table").load(location.href + " .table");
                        iziToast.success({
                            // title: "Success",
                            message: "Status updated successfully",
                            position: "topRight",
                        });
                    } else {
                        iziToast.error({
                            // title: "Error",
                            message: "Status did not updated",
                            position: "topRight",
                        });
                    }
                }
            });
        }




