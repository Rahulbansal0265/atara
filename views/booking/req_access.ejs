                    $("#professional_datatable").before("<div class='row'><div class='col-sm-5' id='search_field'></div><div class='col-sm-6' id='add_icon'></div></div>");
                    $("#professional_datatable_length").appendTo($("#search_field"));
                    $("#professional_datatable_filter").appendTo($("#add_icon"));
                    $('#add_icon').after('<div class="addp"><a title="Add" href="/admin/professionals/addpro"><i class="">+</i></a></div>');
