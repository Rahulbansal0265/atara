<%-include('../partials/header')%>
    <div class="page-container">
        <div class="page-content">
            <%-include('../partials/sidebar')%>
                <div class="content-wrapper">
                    <div class="page-header page-header-default">
                        <div class="page-header-content">
                            <div class="page-title">
                                <h4>
                                    <a href="JavaScript:void(0)">
                                        <i class="icon-arrow-left52 position-left"></i>
                                    </a>
                                    <span class="text-semibold">Request An Access</span>
                                </h4>
                            </div>
                        </div>
                    </div>
                    <div class="content">
                        <div class="panel panel-flat">
                            <div class="panel-heading">
                                <h3 class="panel-title">Listing</h3>
                            </div>
                            <input type="hidden" id="permission" value="<%= global.permission!=''?JSON.stringify(global.permission):"" %>">
                            <input type="hidden" id="type" value="<%= global.type %>">
                            <table id="professional_datatable" class="table datatable-selection-single">
                                <thead>
                                    <tr>
                                        <th class="text-center">Sr.No.</th>
                                        <th class="text-center">Email</th>
                                        <th class="text-center">Phone</th>
                                        <th class="text-center">Company Name</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% 
                                        var j=0
                                        for(let i in req_access){ %>
                                        <tr>
                                            <td class="text-center">
                                                <%= j+=1 %>
                                            </td>
                                            <td class="text-center">
                                                <%=req_access[i].email%>
                                            </td>
                                        
                                            <td class="text-center">
                                                <%=req_access[i].phone_number ? req_access[i].phone_number : ''%>
                                            </td>

                                            <td class="text-center">
                                                <%=req_access[i].company_name%>
                                            </td>
                                            
                                           
                                          
                                        </tr>
                                        <% } %>
                                </tbody>
                            </table>
                        </div>
                        <%- include ("../partials/footer") %>
                    </div>
                </div>
        </div>
    </div>

