              <script>
    $(document).ready(function(){
         
      jQuery.validator.addMethod("noSpace", function(value, element) {
        return value == '' || value.trim().length != 0;
      }, "Space shouldn't be allowed");


      $("#subcategoryvalidation").validate({

        ignore: [],
        // Specify validation rules
        rules: {
            
            title: {
            required: true,
            minlength: 3,
             maxlength: 15,
            noSpace : true
         },
         offer_condition: {
            required: true,
            minlength: 3,
            noSpace : true
         },
         offer: {
            required: true,
            minlength: 3,
            maxlength: 150,
            noSpace : true
         }, 
         brief: {
            required: true,
            noSpace : true
         },
              
        },
        messages: {
         
         title: {
            required: " Please enter title",
            accept: "Please enter a vaild title "
         },
         offer_condition: {
            required: " Please enter offer condition",
            accept: "Please enter a vaild offer condition "
         },

         offer: {
            required: " Please enter offer",
            accept: "Please enter a vaild offer "
         },
         
         brief: {
            required: " Please enter brief",
            accept: "Please enter a vaild brief "
         },
        },
      
      });
    });
    </script> 



