<% if(session.type==1){ %>
    <%-include('../partials/header')%>
        <%}else{%>
            <%- include ("../subAdmin/partials/header") %>
                <%}%>

                    <!-- /main navbar -->

                    <!-- Page container -->
                    <div class="page-container">

                        <!-- Page content -->
                        <div class="page-content">

                            <!-- Main sidebar -->
                            <% if(session.type==1){ %>
                                <%-include('../partials/sidebar')%>
                                    <%}else{%>
                                        <%- include ("../subAdmin/partials/sidebar") %>
                                            <%}%>
                                                <!-- /main sidebar -->

                                                <!-- Main content -->
                                                <div class="content-wrapper">

                                                    <!-- Page header -->
                                                    <div class="page-header page-header-default">
                                                        <div class="page-header-content">
                                                            <div class="page-title">
                                                                <h4> <a href="javascript:history.go(-1);"><i
                                                                            class="icon-arrow-left52 position-left"></i></a><span
                                                                        class="text-semibold">Home</span> - Offers</h4>
                                                            </div>

                                                        </div>

                                                    </div>
                                                    <!-- /page header -->

                                                    <!-- Content area -->
                                                    <div class="content">


                                                        <div class="panel panel-flat">
                                                            <div class="panel-heading">
                                                                <h3 class="panel-title">Offer's Detail</h3>

                                                            </div>




                                                            <table id="myTable"
                                                                class="table datatable-selection-single">
                                                                <thead>
                                                                    <tr>
                                                                        <th>Sr. No.</th>
                                                                        <th>Title</th>
                                                                        <th>Condition</th>
                                                                        <th>Offer</th>
                                                                        <th>Brief</th>

                                                                    </tr>
                                                                </thead>



                                                                <tbody>
                                                                    <% for(let i in offerObj.offerMultiplesArr){ %>
<tr>
                                                                            <td>
                                                                                <%= i+1 %>
                                                                            </td>

                                                                            <td>
                                                                                <%= offerObj.offerMultiplesArr[i]?.title %>

                                                                            </td>
                                                                            <td>
                                                                                <%- offerObj.offerMultiplesArr[i]?.offer_condition.length < 25 ?
                                                                                    offerObj.offerMultiplesArr[i]?.offer_condition :
                                                                                    `${offerObj.offerMultiplesArr[i]?.offer_condition.slice(0,25)}
                                                                                    ... `%>

                                                                                    <%if(offerObj.offerMultiplesArr[i]?.offer_condition.length> 25
                                                                                        ){%>
                                                                                        <a class="btn btn-primary"
                                                                                            onclick="openModal('Condition',`<%= offerObj.offerMultiplesArr[i].offer_condition %> `)">
                                                                                            Read
                                                                                        </a>
                                                                                        <%}%>


                                                                            </td>
                                                                            <td>
                                                                                <%= offerObj.offerMultiplesArr[i]?.offer.length < 25 ? offerObj.offerMultiplesArr[i]?.offer
                                                                                    : `${offerObj.offerMultiplesArr[i]?.offer.slice(0,25)} ... `%>

                                                                                    <%if(offerObj.offerMultiplesArr[i]?.offer.length> 25 ){%>
                                                                                        <a class="btn btn-primary"
                                                                                            onclick="openModal('Offer','<%= offerObj.offerMultiplesArr[i]?.offer %>')">
                                                                                            Read
                                                                                        </a>
                                                                                        <%}%>

                                                                            </td>
                                                                            <td>
                                                                                <%= offerObj.offerMultiplesArr[i]?.brief.length < 25 ? offerObj.offerMultiplesArr[i]?.brief
                                                                                    : `${offerObj.offerMultiplesArr[i]?.brief.slice(0,25)} ... `%>

                                                                                    <%if(offerObj.offerMultiplesArr[i]?.brief.length> 25 ){%>
                                                                                        <a class="btn btn-primary"
                                                                                            onclick="openModal('Brief','<%= offerObj.offerMultiplesArr[i]?.brief %>')">
                                                                                            Read
                                                                                        </a>
                                                                                        <%}%>

                                                                            </td>


                                                                        </tr>
                                                                        <% } %>
                                                                </tbody>


                                                               

                                                            </table>


                                                        </div>
                                                        <!-- Button trigger modal -->

                                                        <div class="panel panel-flat">


                                                            <div class="panel-body">


                                                                <form class="form-horizontal" id="basic-form" action="#"
                                                                    enctype="multipart/form-data" method="post">
                                                                    <fieldset class="content-group">
                                                                        <legend class="text-bold">

                                                                            View Offer's Business Detail

                                                                        </legend>




                                                                        <div class="form-group">
                                                                            <div class="col-lg-2">Business Name</div>

                                                                            <div class="col-lg-10">
                                                                                <%=offerObj.business?.name %>
                                                                            </div>
                                                                        </div>
                                                                        <div class="form-group">
                                                                            <div class="col-lg-2">Business Location
                                                                            </div>

                                                                            <div class="col-lg-10">
                                                                                <%=offerObj.business?.location %>
                                                                            </div>
                                                                        </div>

                                                                        <div class="form-group">
                                                                            <div class="col-lg-2">Facebook</div>

                                                                            <div class="col-lg-10">
                                                                                <%=offerObj.business?.facebook %>
                                                                            </div>
                                                                        </div>
                                                                        <div class="form-group">
                                                                            <div class="col-lg-2">Tik Tok</div>

                                                                            <div class="col-lg-10">
                                                                                <%=offerObj.business?.tiktok %>
                                                                            </div>
                                                                        </div>
                                                                        <div class="form-group">
                                                                            <div class="col-lg-2">YouTube</div>

                                                                            <div class="col-lg-10">
                                                                                <%=offerObj.business?.youtube %>
                                                                            </div>
                                                                        </div>
                                                                        <div class="form-group">
                                                                            <div class="col-lg-2">Instagram</div>

                                                                            <div class="col-lg-10">
                                                                                <%=offerObj.business?.insta %>
                                                                            </div>
                                                                        </div>
                                                                        <div class="form-group">
                                                                            <div class="col-lg-2">Business Description
                                                                            </div>

                                                                            <div class="col-lg-10">
                                                                                <%=offerObj.business?.description %>
                                                                            </div>
                                                                        </div>


                                                                        <div class="form-group">
                                                                            <div class="col-lg-2">Business Image</div>
                                                                            <div class="col-lg-10">
                                                                              

                                                                                    <img style=" width:50px; height:50px;"
                                                                                        src="/images/<%= offerObj.business.business_images?.image %>"
                                                                                        alt="<%= offerObj.business.business_images?.image %>"
                                                                                        srcset="">

                                                                                  
                                                                            </div>
                                                                        </div>



                                                                        
                                                                </form>
                                                            </div>
                                                        </div>

                                                        <div class="panel panel-flat">
                                                            <div class="panel-heading">
                                                                <h3 class="panel-title">Days/Time Details</h3>

                                                            </div>


                                                            <table id="myTable"
                                                                class="table datatable-selection-single">
                                                                <thead>
                                                                    <tr>
                                                                        <th>Sr. No.</th>

                                                                        <th>Days</th>
                                                                        <th>Open Time</th>
                                                                        <th>Close Time</th>
                                                                        <!-- <th>Day Open/Close</th> -->
                                                                        <!-- <th>Action</th> -->

                                                                    </tr>
                                                                </thead>


                                                                <tbody>
                                                                    <% offerObj.bussinessDayTimesArr.forEach((risk,i)=>
                                                                        {%>

                                                                        <tr>
                                                                            <td>
                                                                                <%= i+1 %>
                                                                            </td>
                                                                            <td>
                                                                                <%= risk.day %>

                                                                            </td>
                                                                            <td>
                                                                                <% if(!risk.open_time) {%>
                                                                                    Closed

                                                                                    <%} else{%>
                                                                                        <%= risk?.open_time %>
                                                                                            <%}%>


                                                                            </td>
                                                                            <td>
                                                                                <% if(!risk.close_time) {%>
                                                                                    Closed

                                                                                    <%} else{%>
                                                                                        <%= risk?.close_time %>

                                                                                            <%}%>


                                                                            </td>



                                                                        </tr>
                                                                        <%})%>



                                                                </tbody>

                                                            </table>

                                                            <div class="text-right">

                                                                <a href="/admin/offers" style="background-color: #8080808c; color: black;" type="submit" class="btn btn-secondary">
                                                                    Back
                                                                </a>
                                                            </div>
                                                        </div>

                                                        <!-- Footer -->
                                                        <% if(session.type==1){ %>
                                                            <%-include('../partials/footer')%>
                                                                <%}else{%>
                                                                    <%- include ("../subAdmin/partials/footer") %>
                                                                        <%}%>
                                                                            <!-- /footer -->

                                                    </div>
                                                    <!-- /content area -->


                                                    <!-- Modal -->
                                                    <div class="modal fade" id="exampleModal" tabindex="-1"
                                                        role="dialog" aria-labelledby="exampleModalLabel"
                                                        aria-hidden="true">
                                                        <div class="modal-dialog" role="document">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title" id="exampleModalLabel">Modal
                                                                        title</h5>
                                                                    <button type="button" class="close"
                                                                        data-dismiss="modal" aria-label="Close">
                                                                        <span aria-hidden="true">&times;</span>
                                                                    </button>
                                                                </div>
                                                                <div class="modal-body" id="data_content">
                                                                    ...
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary"
                                                                        data-dismiss="modal">Close</button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>


                                                </div>
                                                <!-- /main content -->

                        </div>
                        <!-- /page content -->

                    </div>
                    <!-- /page container -->

                    </body>

                    </html>
                    <script>
                        function openModal(title, body) {
                          console.log(body)
                            $("#exampleModal").modal({
                                show: 'true'
                            });
                            
                            $("#exampleModalLabel").html(title)
                            $("#data_content").html(body)

                        }
                    </script>