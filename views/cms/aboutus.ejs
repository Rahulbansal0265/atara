
<%- include('../partials/header') %>


<!-- /main navbar -->

<!-- Page container -->
<div class="page-container">

    <!-- Page content -->
    <div class="page-content">

        <!-- Main sidebar -->
        <%- include('../partials/sidebar') %>
            <!-- /main sidebar -->

            <!-- Main content -->
            <div class="content-wrapper">

                <!-- Page header -->
                <div class="page-header page-header-default">
                    <div class="page-header-content">
                        <div class="page-title">
                            <h4> <a href="javascript:history.go(-1);"><i class="icon-arrow-left52 position-left"></i></a><span
                                    class="text-semibold">Home</span> - About Us</h4>
                        </div>

                    </div>

                </div>
                <!-- /page header -->

                <!-- Content area -->
                <div class="content">
                    <div class="panel panel-flat">
                                        
            
                        <div class="panel-body">
            
                            <form id="basic-form" class="form-horizontal" action="/updateabout" method="post" enctype="multipart/form-data">
                                <fieldset class="content-group">
                           <h2 class="text-bold">About us</h2>
            
                           <div class="form-group">
                            <label class="control-label col-lg-1">Title <span
                                    class="text-danger">*</span></label>
                            <div class="col-lg-11">
                                <input type="text" name="title" value="<%=about.title%>"
                                    class="form-control" placeholder="Enter your title"
                                    aria-required="true">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-lg-1">Content<span
                                    class="text-danger">*</span></label>
                            <div class="col-lg-11">
            
                                <textarea id="summernote" name="content"><%=about.content%></textarea>
                                    
                            </div>
            
                        </div>
                                    <div class="text-right">
            
                                        <button type="submit" class="btn btn-primary">Update <i
                                                class="icon-arrow-right14 position-right"></i></button>
                                    </div>
                                    </fieldset>
                            </form>
                        </div>

								<!-- Footer -->
								<%- include("../partials/footer")%>
                                <!-- /footer -->
                   
                </div>
            
                <!-- /content area -->

            </div>
            <!-- /main content -->

    </div>
    <!-- /page content -->

</div>
<!-- /page container -->

</body>

</html>




<script>
    $(document).ready(function () {
        $('#summernote').summernote();
            

    });
</script>
